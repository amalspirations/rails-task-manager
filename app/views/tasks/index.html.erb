<h1>All Tasks</h1>

<%= link_to "Add a new task", new_task_path %>

<% @tasks.each do |task| %>
  <h3><%= task.name %></h3>
  <p><%= task.responsible %></p>
  <p><%= task.due_date %></p>
  <%= link_to "Edit this task", edit_task_path(task) %>
  <%= link_to "Delete this task", task_path(task), method: :delete %>
<% end %>
