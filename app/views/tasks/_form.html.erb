<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :responsible %>
  <%= f.text_field :responsible %>

  <%= f.label :due_date %>
  <input type="text" id="datepicker" name="task[due_date]">

  <%= f.label :completed %>
  <input type="checkbox" name="task[completed]" value="true">

  <%= f.submit %>
<% end %>
